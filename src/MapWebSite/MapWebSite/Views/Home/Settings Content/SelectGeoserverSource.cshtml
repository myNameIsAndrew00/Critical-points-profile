@using MapWebSite.Resources.text

@{
    Layout = null;
}

    <div class="jumbotron" style="background:white">
        <div class="container">
            <div class="select-geoserver-source-container">
                <div class="row">
                    <div class="col-md-6 content-left">
                        <h1>@TextDictionary.HMenuSGSTitleText</h1>
                        <small>@TextDictionary.HMenuSGSDescriptionText</small>

                        <div class="form-group row">
                            @Html.Label(@TextDictionary.HMenuSGSNameInputLabel, new { @class = "col-sm-3" })
                            @Html.TextBox("name", null, new { placeholder = @TextDictionary.HMenuSGSNameInputPlaceholder, @class = "col-sm-5 default-input-gray", onkeyup = "enableGeoserverUploadSubmit()" })

                        </div>
                        <div class="form-group row">
                            @Html.Label(TextDictionary.HMenuSGSUrlInputLabel, new { @class = "col-sm-3" })
                            @Html.TextBox("url", null, new { placeholder = @TextDictionary.HMenuSGSUrlInputPlaceholder, @class = "col-sm-5 default-input-gray", onkeyup = "enableGeoserverUploadSubmit()" })

                        </div>

                        <div class="form-group row">
                            @Html.Label(TextDictionary.HMenuSGSPaletteLabel, new { @class = "col-sm-3" })
                            <button id="selectDefaultPaletteButton" class="col-sm-5 default-input-gray" onclick="openColorPaletteSelectModal()">@TextDictionary.HMenuSGSSearchPaletteButtonText</button>

                        </div>

                        <div class="form-group row">
                            <div class="col-sm-3"></div>
                            <button id="geoserverSelectFinishButton" onclick="uploadSelectedGeoserverLayer()" class="col-sm-5 finish-button" disabled>@TextDictionary.HMenuSGSUploadButton</button>

                        </div>
                    </div>
                    <div class="col-md-6 gliph">
                        @Html.SVG("~/Resources/resources/icons/select_geoserver_source_gliph.svg", new { @class = "current_displayed_icon" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        getScript('#settings-layer', '/Resources/js/settings/settings_select_geoserver_layer.js');
    </script>
